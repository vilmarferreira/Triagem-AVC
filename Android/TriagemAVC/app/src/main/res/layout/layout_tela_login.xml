<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ex"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogar"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnLogar"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/img_login"
        android:layout_weight="0.19" />

    <EditText
        android:id="@+id/editLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editSenha"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="Login"
        android:inputType="textWebEmailAddress"
        android:selectAllOnFocus="false" />

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignLeft="@+id/editLogin"
        android:layout_alignStart="@+id/editLogin"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="97dp"
        android:onClick="OnClickLogar"
        android:text="Logar"
        android:textAlignment="center" />

</LinearLayout>
